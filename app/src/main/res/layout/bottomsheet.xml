<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0091ea"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/bsheet_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_free_breakfast_black_24dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/fontheader"
            android:textColor="@android:color/white"
            android:text="Food"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bsheet_grocery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_local_mall_black_24dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/fontheader"
            android:textColor="@android:color/white"
            android:text="Grocery"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bsheet_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_directions_railway_black_24dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/fontheader"
            android:padding="16dp"
            android:text="Transport"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/bsheet_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_add_shopping_cart_black_24dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/fontheader"
            android:textColor="@android:color/white"
            android:text="Shopping"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bsheet_Fuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_local_gas_station_black_24dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:fontFamily="@font/fontheader"
            android:textColor="@android:color/white"
            android:text="Fuel"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bsheet_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_settings_black_24dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/fontheader"
            android:padding="16dp"
            android:text="Other"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>